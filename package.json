{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap --use-workspaces",
    "start": "lerna run dev --parallel",
    "build": "lerna run build --parallel",
    "landing:dev": "lerna run dev --scope=landing --stream",
    "landing:build": "cross-env NODE_ENV=production lerna run build --scope=landing --stream",
    "product:dev": "lerna run dev --scope=product --stream",
    "product:build": "cross-env NODE_ENV=production lerna run build --scope=product --stream",
    "foundation:build": "lerna run build --scope=@10x/foundation --stream",
    "pre:push": "echo \"Pre Push \" && exit 1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "cross-env": "^7.0.3",
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.12",
